@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>證券基本資料</h2>

<form>
    <div class="form-group row">
        <label for="inputEmail3" class="col-md-1 col-form-label">證券代碼</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail3" placeholder="證券代碼">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-md-1 col-form-label">證券名稱</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputPassword3" placeholder="證券名稱">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-md-1 col-form-label">產業類別</label>
        <div class="col-sm-10">
            <select class="form-control">
                <option value="Taiwan">傳統產業</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-md-1 col-form-label">幣別</label>
        <div class="col-sm-10">
            <select class="form-control">
                <option value="TWD">TWD</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-md-1 col-form-label">國家別</label>
        <div class="col-sm-10">
            <select class="form-control">
                <option value="Taiwan">Taiwan</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-md-1 col-form-label">交易所</label>
        <div class="col-sm-10">
            <select class="form-control">
                <option value="Taiwan">台灣證券交易所</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="button" class="btn btn-danger">Back</button>
            <button type="button" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
