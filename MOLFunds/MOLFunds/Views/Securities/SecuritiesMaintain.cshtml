<form>
    <div class="form-group row">
        <label for="inputEmail3" class="col-md-1 col-form-label">證券代碼</label>
        <div class="col-sm-4">
            <input type="email" class="form-control" id="inputEmail3" placeholder="1101">
        </div>
        <label for="inputEmail3" class="col-md-1 col-form-label">證券名稱</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="inputPassword3" placeholder="台泥">
        </div>
    </div>    
    <div class="form-group row">
        <label for="inputEmail3" class="col-md-1 col-form-label">證券類別</label>
        <div class="col-sm-4">
            <select class="form-control">
                <option value="Taiwan">上市股票</option>
            </select>
        </div>
        <label for="inputEmail3" class="col-md-1 col-form-label">產業類別</label>
        <div class="col-sm-4">
            <select class="form-control">
                <option value="Taiwan">上市水泥工業股</option>                
