@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>使用者操作紀錄</h2>
<br />

<style>
    h2{
        font-family : '微軟正黑體';
        font-weight : bold;
        color : royalblue;
    }

    table {
        font-family: '微軟正黑體';
    }

</style>
<form>
    <div class="form-group row">
        <label for="inputEmail3" class="col-xs-1 col-form-label">查詢年月(起)</label>
        <div class="col-sm-4">
            <input type="email" class="form-control" id="inputEmail3" placeholder="2018/07/31">
        </div>
        <label for="inputEmail3" class="col-xs-1 col-form-label">查詢使用者</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="inputPassword3" placeholder="請輸入使用者名稱">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-xs-1 col-form-label">查詢年月(訖)</label>
        <div class="col-sm-4">
            <input type="email" class="form-control" id="inputEmail3" placeholder="2018/07/31">
        </div>
        <label for="inputEmail3" class="col-xs-1 col-form-label">查詢操作</label>
        <div class="col-sm-4">
            <select class="form-control">
                <option value="Taiwan">查詢</option>
                <option value="Taiwan">新增</option>
                <option value="Taiwan">修改</option>
                <option value="Taiwan">刪除</option>
                <option value="Taiwan">列印</option>
                <option value="Taiwan">匯出</option>
            </select>
        </div>
    </div>  
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="button" class="btn btn-success">查詢</button>
            <button type="button" class="btn btn-danger">清除</button>
        </div>
    </div>
    <hr />
    <table class="table table-hover table-bordered">
        <tr>
            <th>編號</th>
            <th>日期</th>
            <th>使用者</th>
            <th>系統名</th>
            <th>操作內容</th>
        </tr>
        <tr>
            <td>1</td>
            <td>2018/07/20</td>
            <td>Mary</td>
            <td>系統工具管理子系統</td>
            <td>刪除</td>
        </tr>
        <tr>
            <td>2</td>
            <td>2018/07/22</td>
            <td>Tom</td>
            <td>定期存款管理子系統</td>
            <td>新增</td>
        </tr>
        <tr>
            <td>3</td>
            <td>2018/07/07</td>
            <td>Lily</td>
            <td>證券管理子系統</td>
            <td>編輯</td>
        </tr>
        <tr>
            <th colspan="4">
                <div>
                    <button type="button" class="btn btn-info" style="align-content:center">編輯</button>
                    <button type="button" class="btn btn-danger" style="align-content:center">刪除</button>
                </div>
            </th>
        </tr>
    </table>
</form>
